#chatroom_container.row.bg-secondary.text-light
  #side_panel.col-md-4.col-sm-4
    %li.list-group-item.d-flex.align-items-center.justify-content-between.user_list_item
      %div.icon-container
        = link_to image_tag(current_user.chat_avatar, class:'chat_pfp'), current_user
        = turbo_stream_from 'user_status'
        %div
          = render 'users/status', user: current_user
      .ms-2.me-auto.username= current_user.username
    %h4 Users
    = turbo_stream_from "users"
    #users
      = render @users

    %h4 Rooms
    = render "rooms/new_room_form"
    = turbo_stream_from "rooms"
    #rooms
      = render @rooms
      
  #room_container.col-md-8.col-sm-8.text-light.bg-dark
    - if @selected_room
      #selected_room
        %h4.text-center
          = @user&.email || @selected_room.name
        = turbo_stream_from @selected_room
        #messages{"data-controller" => "scroll"  } 
          = render @messages
        = render "layouts/new_message_form"